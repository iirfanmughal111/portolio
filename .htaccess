<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /wordpress/
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule . /wordpress/index.php [L] //working for live env
RewriteRule ^(.*)$ index.php?_REQUEST=$1 [L]  //working for local env
</IfModule>
